<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/irmadarkblue" >

    <ImageView
        android:id="@+id/mainshape"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/whiteshaperounded"
        android:layout_alignParentTop="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3"
        android:id="@+id/step3_text"
        android:layout_alignTop="@+id/mainshape"
        android:layout_alignRight="@+id/mainshape"
        android:layout_alignEnd="@+id/mainshape"
        android:textColor="@color/irmagrey"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2"
        android:id="@+id/step2_text"
        android:textColor="@color/irmagrey"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:layout_alignTop="@+id/mainshape"
        android:layout_toLeftOf="@+id/step3_text" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/step1_text"
        android:textColor="@color/irmagrey"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:layout_alignTop="@+id/mainshape"
        android:layout_toLeftOf="@+id/step2_text"
        android:layout_toStartOf="@+id/step2_text"/>

    <ImageView
        android:id="@+id/irmaLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/irmalogo"
        android:src="@drawable/irma_logo_150"
        android:layout_alignTop="@+id/mainshape"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/step1_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/step_string"
        android:id="@+id/step_text"
        android:textColor="@color/irmagrey"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/step1_text"
        android:layout_alignBottom="@+id/step1_text"
        android:layout_toStartOf="@+id/step1_text" />

</RelativeLayout>

